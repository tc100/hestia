  body#page-top
    nav#mainNav.navbar.navbar-default.navbar-fixed-top
      .container-fluid
        // Brand and toggle get grouped for better mobile display
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand.page-scroll(href='/') Hestia
        // Collect the nav links, forms, and other content for toggling
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav.navbar-left
            li
              a.page-scroll.dropdown-toggle(data-toggle='dropdown', href='#')
                | Cadastros
                span.caret
              ul.dropdown-menu
                li
                  a(href='/funcionario') Funcionarios
                li
                  a(href='#') Cardapio
            li
              a.page-scroll(href='#') Administrativo
            li
              a.page-scroll(href='#') B.I.
            li
              a.page-scroll(href='#') Contate-nos
          ul.nav.navbar-nav.navbar-right
            li
              a.page-scroll(href='/login') "NOME AQUI"
        // /.navbar-collapse
      // /.container-fluid
    section
      .container
        h2.section-heading.text-center
          | Funcionário
          br
          small Edição do cadastro de [nome do funcionario]
        hr
        .row
        .row
          form(method='post')
            .col-sm-6.col-sm-offset-3
              .form-group.col-sm-12
                input#nome-funcionario.form-control(type='text', required='', name='nomeFuncionário', placeholder='Nome do Funcionário')
              .form-group.col-sm-12
                input#login-funcionario.form-control(type='text', required='', name='login', placeholder='Login')
              .form-group.col-sm-12
                input#senha-funcionario.form-control(type='password', required='', pattern= '(?=^.{8,}$)((?=.*\\d)|(?=.*\\W+))(?![.\\n])(?=.*[A-Z])(?=.*[a-z]).*$' , size='8', maxlength='12', name='senha', placeholder='Senha')
              br
              br
              .col-sm-2
                a.btn.btn-default(href='/funcionario') Voltar
              .col-sm-2.col-sm-offset-7
                input.btn.btn-default(type='submit', value='Salvar')
    // jQuery
    script(src='/javascripts/jquery.js')
    // Bootstrap Core JavaScript
    script(src='/javascripts/bootstrap.min.js')
